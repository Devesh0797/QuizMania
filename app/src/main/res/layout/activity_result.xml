<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_ans"
                android:text="Review"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="26sp"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="match_parent"
                android:id="@+id/answer_1"
                android:text="null"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:layout_below="@+id/tv_ans"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/answer_2"
                android:layout_height="wrap_content"
                android:text="null"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_below="@+id/answer_1"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/answer_3"
                android:layout_height="wrap_content"
                android:text="null"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/answer_2"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/answer_4"
                android:layout_height="wrap_content"
                android:text="null"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/answer_3"/>

            <TextView
                android:id="@+id/tv_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer_4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:gravity="end"
                android:text="Finish Review"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />



        </RelativeLayout>


    </ScrollView>


</RelativeLayout>